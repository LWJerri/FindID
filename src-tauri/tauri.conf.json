{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "package": {
    "productName": "FindID"
  },
  "build": {
    "devPath": "http://localhost:5173",
    "distDir": "../dist",
    "beforeDevCommand": "pnpm vite:dev",
    "beforeBuildCommand": "pnpm vite:build"
  },
  "tauri": {
    "windows": [
      {
        "label": "findid",
        "fileDropEnabled": false,
        "center": true,
        "minWidth": 448,
        "minHeight": 533,
        "title": "FindID - Simple application for working with IDs",
        "contentProtected": true
      }
    ],
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "ua.lwjerri.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico",
        "icons/icon.png",
        "icons/Square30x30Logo.png",
        "icons/Square44x44Logo.png",
        "icons/Square71x71Logo.png",
        "icons/Square89x89Logo.png",
        "icons/Square107x107Logo.png",
        "icons/Square142x142Logo.png",
        "icons/Square150x150Logo.png",
        "icons/Square284x284Logo.png",
        "icons/Square310x310Logo.png",
        "icons/StoreLogo.png"
      ],
      "copyright": "LWJerri (lwjerri.dev)",
      "category": "Utility",
      "shortDescription": "Application to find or extract IDs.",
      "longDescription": "A simple application that makes it easy to find some container or product by ID.",

      "windows": {
        "digestAlgorithm": "sha256",
        "allowDowngrades": false,
        "nsis": {
          "license": "MIT",
          "headerImage": "icons/Square310x310Logo.png",
          "installerIcon": "icons/Square310x310Logo.png",
          "displayLanguageSelector": true
        }
      }
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/LWJerri/FindID/releases/download/v{{current_version}}/findid_{{current_version}}_x64-setup.exe"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQ5RDIzNjYzNTlBOTdBOEQKUldTTmVxbFpZemJTMmJONVhKSERiYk81cmpFS1llY2YvL3o0L3JlS0VVUERMZWVGd2lrY251dmgK"
    }
  }
}
